#!/bin/bash

# Battery warning script
~/git/dotfiles/scripts/battery-notify &

# Set monitor positions. Command generated by arandr.
xrandr --output eDP-1-1 --mode 1920x1080 --pos 3840x0 --rotate normal --output DP-1 --off --output HDMI-0 --mode 1920x1080 --pos 0x0 --rotate normal --output DP-1-2 --off --output DP-1-1 --primary --mode 1920x1080 --pos 1920x0 --rotate normal --output DP-0 --off

# Start compositor
compton -b

# Disable screensaver
xset -dpms s off
# ...and use xautolock instead
#xautolock -time 20 -locker "~/scripts/lock" &

# Disable touchpad taps
synclient MaxTapTime=0

# Set wallpaper and colors
~/git/dotfiles/scripts/pywal &

# Applications
~/git/dotfiles/scripts/polybar &
redshift &
solaar &
discord &
duplicati &
