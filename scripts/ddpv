#!/usr/bin/env bash

# dd with progress bar

bs="1M"
pv_opts="-F '%e%r%p%b'"


# Elevate script
if (($EUID != 0)); then
	if [ -t 0 ]; then
		sudo -H "$0" "$@"
	else
		SUDO_ASKPASS=$(which askpass-rofi) sudo -AH "$0" "$@"
	fi
	exit
fi

# Notification wrapper
notify () {
	if [ -t 0 ]; then
		echo $@
	else
		sudo -u reese dunstify $@
	fi
}

# The actual logic
pv $pv_opts $1 | dd of=$2 bs=$bs
if [ $? -eq 0 ]; then
	notify "data transferred"
else
	notify "uh oh, something went wrong" "exit code: $?"
fi
