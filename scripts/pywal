#!/bin/bash

wppath=${1:-~/Pictures/Wallpapers/favorites/}

wal -i $wppath --backend colorz

sleep 1

# restart polybar
~/scripts/polybar &

# set keyboard color
python3 ~/git/dotfiles/scripts/razer 5

# update firefox theme
pywalfox update

# update atom theme
touch ~/.atom/styles.less

# compile discord theme
sassc ~/git/discord-themes/bliss/pywal.scss ~/git/discord-themes/bliss/pywal.css

# compile android messages theme
sassc ~/.config/android-messages/css/user-style.scss ~/.config/android-messages/css/user-style.css
