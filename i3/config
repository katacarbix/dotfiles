bindsym $sup+Control+Shift+2	exec --no-startup-id maim -i $(xdotool getactivewindow) | xclip -selection clipboard -t image/png
bindsym $sup+Shift+3			exec --no-startup-id maim ~/Pictures/Screenshots/$(date -Iseconds).png
bindsym $sup+Control+Shift+3	exec --no-startup-id maim | xclip -selection clipboard -t image/png
bindsym $sup+Shift+4			exec --no-startup-id maim -s ~/Pictures/Screenshots/$(date -Iseconds).png
